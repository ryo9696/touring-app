<% provide(:title, "パスワードを忘れた場合") %>
<h1>パスワードを忘れた場合</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: password_resets_path, scope: :password_reset,
                    local: true) do |f| %>
      <%= f.label :email, "Eメール" %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.submit "申請する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>